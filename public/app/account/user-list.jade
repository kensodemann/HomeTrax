div.container
	table.table
		thead
			tr
				th First Name
				th Last Name
				th Username
		tbody(ng-repeat="user in users")
			tr
				td {{user.firstName}}
				td {{user.lastName}}
				td
					a(href = "", ng-click="edit(user)") {{user.username}}

.modal.fade(role='dialog', trigger='user')
	.modal-dialog
		.modal-content
			.modal-header
				button.close(type='button', data-dismiss='modal', aria-hidden='true') &times;
				h4.modal-title Edit {{user.username}}
			.modal-body
				fieldset
					.form-group
						label.col-md-3.control-label(for='firstName') First Name
						.col-md-9
							input.form-control(name='firstName', type='text', ng-model='user.firstName', required)
					.form-group
						label.col-md-3.control-label(for='lastName') Last Name
						.col-md-9
							input.form-control(name='lastName', type='text', ng-model='user.lastName', required)
			.modal-footer
				button.btn.btn-default(type='button', ng-click="cancel()") Close
				button.btn.btn-primary(type='button', ng-click='save()') Save
	
button.btn.btn-primary(ng-click="create()") Add New Dude